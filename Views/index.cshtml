@{
    Layout="Shared/_Layout.cshtml";
}

@Html.Partial("sidebar.cshtml")

<div class="container">
  <div class="row" >
    <div class="col m12">
      <h1 id="recipe-title">Recipe Box</h1>
    </div>
  </div>
  @foreach(var recipe in @Model)
  {
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">@recipe.GetName()</span>
        <p>I am a very simple card. I am good at containing small bits of information.
          I am convenient because I require little markup to use effectively.
        </p>
      </div>
    </div>
  }
  <a id="add-recipe" class="btn-floating btn-large waves-effect waves-light teal darken-3" href="/new-recipe"><i class="material-icons">add</i></a>
</div>
