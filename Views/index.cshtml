@{
    Layout="Shared/_Layout.cshtml";
}

@Html.Partial("sidebar.cshtml")

<div class="container">
  <div class="row" >
    <div class="col m12">
      <h1 id="recipe-title">Recipe Box</h1>
    </div>
  </div>
  @foreach(var recipe in @Model)
  {
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">@recipe.GetName()</span>
        <p>Rate: @recipe.GetRate() Cook Time: @recipe.GetTime() mins</p>
      </div>
      <div class="card-action">
        <a href="/recipe/@recipe.GetId()/info">View Recipe</a>
      </div>
    </div>
  }
  <a id="add-recipe" class="btn-floating btn-large waves-effect waves-light teal darken-3" href="/new-recipe"><i class="material-icons">add</i></a>
</div>
