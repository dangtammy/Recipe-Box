@{
    Layout="Shared/_Layout.cshtml";
}


<h1>@Model["recipe"].GetName()</h1>
<hr>
<h2>Ingredients</h2>
<ul>
@foreach(var ingredient in @Model["ingredients"])
{
  <li>@ingredient</li>
}
</ul>
<div class="row">
  <form class="col s12" action="/@Model["recipe"].GetId()/ingredient/added" method="post">
    <div class="row">
      <div class="input-field">
        <label for="ingredient-name"></label>
        <input type="text" name="ingredient-name" class="validate" placeholder = "Ingredient Name">
        <button class="btn-floating btn-large waves-effect waves-light teal darken-3" type="submit"><i class="material-icons">+</i></button>
        </div>
      </div>
  </form>
</div>
<hr>
<h2>Instructions</h2>
<ul>
  @foreach(var step in @Model["instruction"])
  {
    <li>@step</li>
  }
</ul>
<div class="row">
  <form class="col s12" action="/@Model["recipe"].GetId()/instructions/added" method="post">
    <div class="row">
      <div class="input-field">
        <label for="instructions"></label>
        <input type="text" name="instructions" class="validate" placeholder = "Step">
        <button class="btn-floating btn-large waves-effect waves-light teal darken-3" type="submit"><i class="material-icons">+</i></button>
        </div>
      </div>
  </form>
</div>
<div class="row">
  <form action="/recipe/@Model["recipe"].GetId()" method="post">
    <div class="col m6">
      <div class="stars">
        <input class="star star-5" id="star-5" type="radio" name="star" value="5"/>
        <label class="star star-5" for="star-5"></label>
        <input class="star star-4" id="star-4" type="radio" name="star" value="4"/>
        <label class="star star-4" for="star-4"></label>
        <input class="star star-3" id="star-3" type="radio" name="star" value="3"/>
        <label class="star star-3" for="star-3"></label>
        <input class="star star-2" id="star-2" type="radio" name="star" value="2"/>
        <label class="star star-2" for="star-2"></label>
        <input class="star star-1" id="star-1" type="radio" name="star" value="1"/>
        <label class="star star-1" for="star-1"></label>
      </div>
    </div>
    <div class="col m6">
      <p class="range-field">
        <label for="time">Time(mins):</label>
        <input type="range" name="time" min="0" max="240" />
      </p>
    </div>
    <button id="fake-submit" class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="material-icons right"></i>
    </button>
  </form>
</div>
<a href="/">Back Home</a>
